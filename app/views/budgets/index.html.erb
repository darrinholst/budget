<div class="container-fluid">
  <div class="row-fluid">
    <table class="table span9">
      <tr>
        <th>Starts On</th>
        <th>Actual Balance</th>
        <th>Left To Spend</th>
        <th>Buffer</th>
      </tr>
      <% @budgets.each do |budget| %>
        <tr>
          <td><%= link_to budget.starts_on, edit_budget_path(budget) %></td>
          <td><%= budget.actual_balance %></td>
          <td><%= budget.left_to_spend %></td>
          <td><%= budget.actual_buffer %></td>
        </tr>
      <% end %>
    </table>
  </div>

  <div class="row-fluid">
    <div class="well span9">
      <%= link_to "Add New", new_budget_path, class: "btn btn-success" %>
    </div>
  </div>
</div>

