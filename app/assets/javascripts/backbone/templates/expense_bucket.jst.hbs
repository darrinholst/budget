<div class="clearfix bucket {{#if hasItemizations}}has-itemizations{{/if}}">
  <div class="col-md-6"><input type="text" name="name" class="inline-edit" value="{{name}}"></div>
  <div class="col-md-2"><input type="text" name="budgeted" class="inline-edit" value="{{budgeted}}"></div>
  <div class="col-md-2 spent"><input type="text" name="spent" class="inline-edit" value="{{spent}}" {{#if hasItemizations}}readonly{{/if}}><i class="fa fa-plus itemize-bucket" data-itemize-bucket title="add itemization"></i></div>
  <div class="col-md-2"><input type="text" name="remaining" class="inline-edit" value="{{remaining}}" readonly></div>
  <i class="delete hover-show fa fa-trash-o delete-bucket" data-delete-bucket title="remove bucket"></i>
  {{#if hasItemizations}}<i class="collapse-bucket hover-show fa fa-angle-{{#if collapsed}}right{{else}}down{{/if}}" data-collapse></i>{{/if}}
</div>

<div class="itemizations" {{#if collapsed}}style="display: none"{{/if}}></div>

