<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">Starts On</div>
    <div class="span3">Actual Balance</div>
    <div class="span3">Not Cleared</div>
    <div class="span2">Buffer</div>
    <div class="span1"></div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <a class="btn btn-success" data-toggle="modal" href="#addBudget">New Budget</a>
    </div>
  </div>
</div>

<div class="modal fade" data-keyboard="false" id="addBudget">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3>Add a new budget</h3>
  </div>
  <div class="modal-body">
    <label class="inline" for="starts_on">Starts On:</label>
    <input type="text" id="starts_on" value="{{currentDate}}">

    <label class="radio">
      <input name="from" type="radio" checked>
      <span>From Existing</span>
      <select>
        {{#budgets}}
          <option>{{date}}</option>
        {{/budgets}}
      </select>
      <div class="clear"></div>
    </label>
    <label class="radio">
      <input name="from" type="radio">
      <span>From Scratch</span>
      <div class="clear"></div>
    </label>
  </div>
  <div class="modal-footer ">
    <a href="#" class="btn btn-cancel">Cancel</a>
    <a href="#" class="btn btn-success">Create Budget</a>
  </div>
</div>
