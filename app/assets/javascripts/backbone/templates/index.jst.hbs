<div class="container-fluid">
  <div class="row-fluid header">
    <div class="column">Starts On</div>
    <div class="column">Actual Balance</div>
    <div class="column">Not Cleared</div>
    <div class="column">Buffer</div>
  </div>

  <div class="row-fluid footer">
    <div class="column">
      <a class="btn btn-success" data-toggle="modal" href="#addBudget">New Budget</a>
    </div>
  </div>
</div>

<div class="modal" data-keyboard="false" id="addBudget">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3>Add a new budget</h3>
  </div>
  <div class="modal-body">
    <div>
      <label class="inline" for="starts_on">Starts On:</label>
      <input type="text" id="starts_on">
    </div>

    <div>
      <label class="inline" for="ends_on">Ends On:</label>
      <input type="text" id="ends_on">
    </div>

    <label class="radio">
      <input name="from" id="from_clone" type="radio" value="clone" checked>
      <span>From Existing</span>
      <select id="from_selection"></select>
      <div class="clear"></div>
    </label>
    <label class="radio">
      <input name="from" id="from_scratch" type="radio" value="scratch">
      <span>From Scratch</span>
      <div class="clear"></div>
    </label>
  </div>
  <div class="modal-footer ">
    <a href="#" class="btn btn-cancel">Cancel</a>
    <a href="#" class="btn btn-success">Create Budget</a>
  </div>
</div>
