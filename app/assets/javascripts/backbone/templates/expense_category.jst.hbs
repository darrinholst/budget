<div class="category-container">
  <i class="icon icon-cogs configure-category" data-configure-category title="add bucket/remove category"></i>
  <i class="collapse-category icon icon-angle-{{#if collapsed}}right{{else}}down{{/if}}" data-collapse></i>

  <div class="row-fluid category header">
  </div>

  <div class="row-fluid buckets" {{#if collapsed}}style="display: none"{{/if}}>
  </div>
</div>

<div class="category-actions">
  <ul>
    <li><a href="#" class="btn btn-danger" data-delete-category>Delete Category</a></li>
    <li><a href="#" class="btn btn-success" data-add-bucket>Add Bucket</a></li>
  </ul>
</div>
